# Exemple de configuration client
# Copiez ce fichier et renommez-le en : clientname.caddy

# Convention de nommage (dbfilter: ^[^.]+\.([^.]+)\.)
# Le nom de la base = 2ème segment du domaine
#
# Exemples:
#   erp.casaobrasibiza.com  → DB: casaobrasibiza
#   crm.iya.com             → DB: iya
#   admin.autreclient.fr    → DB: autreclient
#
# ⚠️ Le sous-domaine (erp, crm, admin, etc.) n'a PAS d'importance
# ⚠️ Créez votre base avec le nom EXACT du 2ème segment

erp.casaobrasibiza.com {
    # Compression
    encode gzip
    
    # Websocket et Longpolling - Port 8072
    handle /websocket* {
        reverse_proxy odoo:8072
    }
    
    handle /longpolling/* {
        reverse_proxy odoo:8072
    }
    
    # Route principale - Port 8069
    handle {
        # Cache pour les assets statiques
        @static {
            path *.js *.css *.png *.jpg *.jpeg *.gif *.ico *.svg *.woff *.woff2 *.ttf *.eot
        }
        header @static Cache-Control "public, max-age=31536000"
        
        reverse_proxy odoo:8069
    }
    
    log {
        output file /var/log/caddy/casaobrasibiza.log
    }
}

